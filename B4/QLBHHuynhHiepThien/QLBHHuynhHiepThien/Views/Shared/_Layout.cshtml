@using QLBHHuynhHiepThien.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/css/menuCSS.css">
    <link href="~/Content/css/btn87.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse">
        @Session["EmailClient"]!
        <div class="dropdown">
            <nav class="nav-menu">
                <a class="nav-menu-a" href="#">Home</a>
                <a class="nav-menu-a" href="#">About</a>
                <a class="nav-menu-a" href="#">Blog</a>
                <a class="nav-menu-a" href="#">Portefolio</a>
                <a class="nav-menu-a" href="#">Liên hệ</a>
                <a class="nav-menu-a">Category</a>
                <div class="dropdown-content">
                    @foreach (var item in HomeModel.ListCategory)
                    {
                        @Html.ActionLink(item.CategoryName, "ProductCategory", "Category", new { @class = "dropdown-categorey-a", @Id = @item.CategoryID }, null)
                        <br />
                    }
                </div>
                <div class="animation start-home"></div>
            </nav>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
